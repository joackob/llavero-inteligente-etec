generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id                      String           @id @default(uuid())
  createdAt               DateTime         @default(now())
  updatedAt               DateTime         @updatedAt
  nombre                  String
  apellido                String
  email                   String           @unique
  password                String           @unique
  activo                  Boolean          @default(true)
  devoluciones            Devoluciones[]
  prestamos               Prestamos[]
  transferenciasEmitidas  Transferencias[] @relation("TransferenciasEmitidas")
  transferenciasRecibidas Transferencias[] @relation("TransferenciasRecibidas")
}

model Llaves {
  id             String           @id @default(uuid())
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  espacio        String
  ocupada        Boolean          @default(false)
  delovoluciones Devoluciones[]
  prestamos      Prestamos[]
  transferencias Transferencias[]
}

model Devoluciones {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuario   Users    @relation(fields: [usuarioId], references: [id])
  usuarioId String
  llave     Llaves   @relation(fields: [llaveId], references: [id])
  llaveId   String
}

model Prestamos {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuario   Users    @relation(fields: [usuarioId], references: [id])
  usuarioId String
  llave     Llaves   @relation(fields: [llaveId], references: [id])
  llaveId   String
}

model Transferencias {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  usuarioEmisor     Users    @relation("TransferenciasEmitidas", fields: [usuarioEmisorId], references: [id])
  usuarioEmisorId   String
  usuarioReceptor   Users    @relation("TransferenciasRecibidas", fields: [usuarioReceptorId], references: [id])
  usuarioReceptorId String
  llave             Llaves   @relation(fields: [llaveId], references: [id])
  llaveId           String
}

