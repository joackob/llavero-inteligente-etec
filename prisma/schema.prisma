generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name String 
  lastname String 
  email String @unique
  password String @unique
  devoluciones Devoluciones[]
  prestamos Prestamos[]
  transferencias Transferencias[]
}


model Llaves{
  id String @id @default( uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  espacio String
  ocupada Boolean @default(false)
  delovoluciones Devoluciones[]
  prestamos Prestamos[]

}

model Devoluciones{
  id String @id @default( uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuario Users @relation(fields:[userId], references:[id])
  userId String
  llave Llaves @relation(fields: [llaveId], references: [id])
  llaveId String  
}

model Prestamos{
  id String @id @default( uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuario Users @relation(fields:[userId], references:[id])
  userId String
  llave Llaves @relation(fields: [llaveId], references: [id])
  llaveId String
}

model Transferencias{
  id String @id @default( uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  usuarioEmisor Users @relation(fields:[userIdEmisor], references:[id])
  userIdEmisor String
  usuarioReceptor Users @relation(fields:[userIdReceptor], references:[id])
  userIdReceptor String
  llave Llaves @relation(fields: [llaveId], references: [id])
  llaveId String
}


